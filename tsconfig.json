{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2019"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
